<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/burda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/makkah"
    android:foregroundGravity="center_horizontal"
    android:visibility="visible"
    tools:background="@drawable/makkah"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Translation"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="235dp"
        android:layout_height="48dp"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="356dp"
        android:background="@color/colorPrimaryDark"
        android:contentDescription="Burda Translation"
        android:onClick="burdha_translation"
        android:text="Burda Translation"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textFontWeight="2"
        android:textSize="50px"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Burda Translation" />

    <Button
        android:id="@+id/Baith"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="235dp"
        android:layout_height="48dp"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="277dp"
        android:background="@color/colorPrimaryDark"
        android:contentDescription="Burda Baith"
        android:onClick="burdha_baith"
        android:text="Burda Baith"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textFontWeight="2"
        android:textSize="50px"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Burda Baith" />

    <Button
        android:id="@+id/Arabic"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="235dp"
        android:layout_height="48dp"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="437dp"
        android:background="@color/colorPrimaryDark"
        android:contentDescription="Recitation of burda in Arabic"
        android:onClick="arabic_recitation"
        android:text="Burda Arabic Recitation"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="50px"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Burda Arabic Recitation" />

    <Button
        android:id="@+id/Malayalam"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="235dp"
        android:layout_height="48dp"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="514dp"
        android:background="@color/colorPrimaryDark"
        android:contentDescription="Burda Recitation in Malayalam"
        android:fadingEdge="horizontal|vertical|none"
        android:gravity="center"
        android:onClick="malayalam_recitation"
        android:text="Burda Malayalam Recitation"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="50px"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Burda Malayalam Recitation" />

</androidx.constraintlayout.widget.ConstraintLayout>